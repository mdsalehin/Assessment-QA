		{
			"name": "Create",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const lodash = require('lodash');\r",
							"\r",
							"\r",
							"\r",
							"// Random Title\r",
							"const title = \"Book \" + lodash.random(1000, 9999);\r",
							"pm.collectionVariables.set(\"title\", title);\r",
							"\r",
							"// Random Author\r",
							"const author = \"Author \" + lodash.random(1000, 9999);\r",
							"pm.collectionVariables.set(\"author\", author);\r",
							"\r",
							"// Random Genre\r",
							"const genres = [\"Fiction\", \"Tech\", \"Science\", \"History\", \"Biography\"];\r",
							"const genre = genres[lodash.random(0, genres.length - 1)];\r",
							"pm.collectionVariables.set(\"genre\", genre);\r",
							"\r",
							"// Random Year Published\r",
							"const yearPublished = lodash.random(1900, 2026);\r",
							"pm.collectionVariables.set(\"yearPublished\", yearPublished);\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse response\r",
							"const jsonData = pm.response.json();\r",
							"\r",
							"// Save bookId for later use (update/delete)\r",
							"pm.collectionVariables.set(\"bookId\", jsonData.id);\r",
							"\r",
							"\r",
							"pm.test(\"If book created successfully\", () => {\r",
							"    pm.expect(jsonData.id).to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Status code is 201\", () => {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"pm.test(\"Book data matches request\", () => {\r",
							"    pm.expect(jsonData.title).to.equal(pm.collectionVariables.get(\"title\"));\r",
							"    pm.expect(jsonData.author).to.equal(pm.collectionVariables.get(\"author\"));\r",
							"    pm.expect(jsonData.genre).to.equal(pm.collectionVariables.get(\"genre\"));\r",
							"    pm.expect(jsonData.yearPublished).to.equal(\r",
							"        Number(pm.collectionVariables.get(\"yearPublished\"))\r",
							"    );\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "api-key",
						"value": "postmanrulz",
